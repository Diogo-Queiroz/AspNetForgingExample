@model ForgingAhead.Models.Character 
@section header {
	<meta name="description" content="Form for updating a character in ForgingAhead"> 
}

<div class="panel panel-default">
	<div class="panel-heading">
		<h3>Create</h3>
	</div>
	<div class="panel-body">
		<form asp-action="Update" asp-controller="Character">
      <input type="hidden" asp-for="ID" value="@Model.ID" />
			<div class="form-horizontal">
				<h4>Character</h4>
				<hr />

				<div class="form-group">
					<label class="control-label col-md-2" asp-for="Name"></label>
					<div class="col-md-6">
						<input type="text" class="form-control" asp-for="Name" value="@Model.Name" />
					</div>
				</div>

				<div class="form-group">
					<label class="control-label col-md-2" asp-for="Level"></label>
					<div class="col-md-6">
						<input type="number" class="form-control" asp-for="Level" value="@Model.Level"/>
					</div>
				</div>

				<div class="form-group">
					<label class="control-label col-md-2" asp-for="Strength"></label>
					<div class="col-md-6">
						<input class="form-control" asp-for="Strength" value="@Model.Strength"/>
					</div>
				</div>

				<div class="form-group">
					<label class="control-label col-md-2" asp-for="Dexterity"></label>
					<div class="col-md-6">
						<input class="form-control" asp-for="Dexterity" value="@Model.Dexterity"/>
					</div>
				</div>

				<div class="form-group">
					<label class="control-label col-md-2" asp-for="Intelligence"></label>
					<div class="col-md-6">
						<input class="form-control" asp-for="Intelligence" value="@Model.Intelligence"/>
					</div>
				</div>

				<div class="form-group">
					<div class="col-md-offset-2 col-md-6">
						<div class="checkbox">
							<label asp-for="isActive">
            <input type="checkbox" id="isActive" name="isActive" value="@Model.isActive" /> Is Active
          </label>
						</div>
					</div>
				</div>

				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<button type="submit" class="btn btn-default">Update</button>
						<button type="reset" class="btn btn-danger">Go Back</button>
					</div>
				</div>

			</div>
		</form>
	</div>
</div>