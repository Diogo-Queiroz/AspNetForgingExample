@model ForgingAhead.Models.Equipment
@section header {
  <meta name="description" content="Form for creating a equipment in ForgingAhead">
}

<div class="panel panel-default">
  <div class="panel-heading">
    <h3>Create</h3>
  </div>
  <div class="panel-body">
    <form asp-action="Create" asp-controller="Equipment">
      <div class="form-horizontal">
        <h4>Equipment</h4>
        <hr />

        <div class="form-group">
          <label class="control-label col-md-2" asp-for="Name"></label>
          <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="form-group">
          <label class="control-label col-md-2" asp-for="Preco"></label>
          <input type="number" class="form-control" asp-for="Preco" />
        </div>

        <div class="form-group">
          <label class="control-label col-md-2" asp-for="Tipo"></label>
          <input type="text" class="form-control" asp-for="Tipo" />
        </div>

        <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success">Create</button>
            <button type="reset" class="btn btn-danger">Clear</button>
          </div>
        </div>

      </div>
    </form>
  </div>
</div>